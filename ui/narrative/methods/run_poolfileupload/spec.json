{
    "ver": "0.0.1",
    "authors": [
        "omreegaloz"
    ],
    "contact": "",
    "categories": ["active"],
    "widgets": {
        "input": null,
        "output": null
    },
    "parameters": [
        {
            "id": "staging_file_name",
            "optional": false,
            "advanced": false,
            "allow_multiple": true,
            "default_values": [ "" ],
            "field_type": "dynamic_dropdown",
            "text_options": {
                "valid_ws_types": "ftp_staging"
            }
        },
        {

            "id": "genome_ref",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [""],
            "field_type": "text",
            "text_options": {
                "valid_ws_types": ["KBaseGenomes.Genome"]
            }
        },
        {
            "id": "pool_file_type",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "" ],
            "field_type": "dropdown",
            "dropdown_options": {
                "options": [
                {
                    "value": "poolfile",
                    "display": "Pool File"
                },
                {
                    "value": "poolcount",
                    "display": "Pool Count"
                },
                {
                    "value": "experiments",
                    "display": "Experiments"
                }
                ]
            }
        },
        {

            "id": "description",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [""],
            "field_type": "textarea",
            "textarea_options": {
                "n_rows": 3
            }
        },
        {
            "id": "sep_type",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "TSV" ],
            "field_type": "dropdown",
            "dropdown_options": {
                "options": [
                {
                    "value": "TSV",
                    "display": "TSV"
                },
                {
                    "value": "CSV",
                    "display": "CSV"
                }
                ]
            }
        },
        {
            "id": "run_method",
            "optional": false,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [ "poolcount" ],
            "field_type": "dropdown",
            "dropdown_options": {
                "options": [
                {
                    "value": "poolcount",
                    "display": "Pool Count"
                }
                ]
            }
        },
        {
            "id": "output_name",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "is_output_name": true
            }
        }
    ],
    "behavior": {
        "service-mapping": {
            "url": "",
            "name": "poolfileupload",
            "method": "run_poolfileupload",
            "input_mapping": [
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                },{
                    "narrative_system_variable": "workspace_id",
                    "target_property": "workspace_id"
                },
                {
                    "input_parameter": "genome_ref",
                    "target_property": "genome_ref",
                    "target_type_transform": "resolved-ref"

                },              
                {
                    "input_parameter": "pool_file_type",
                    "target_property": "pool_file_type"
                },
                {
                    "input_parameter": "description",
                    "target_property": "description"
                },              
                {
                    "input_parameter": "sep_type",
                    "target_property": "sep_type"
                },

                {
                    "input_parameter": "run_method",
                    "target_property": "run_method"
                },
                {
                    "input_parameter": "staging_file_name",
                    "target_property": "staging_file_name"
                },
                {
                    "input_parameter": "output_name",
                    "target_property": "output_name"
                }
            ],
            "output_mapping": [
                {
                    "service_method_output_path": [0,"report_name"],
                    "target_property": "report_name"
                },{
                    "service_method_output_path": [0,"report_ref"],
                    "target_property": "report_ref"
                }
            ]
        }
    },
    "job_id_output_field": "docker"
}
